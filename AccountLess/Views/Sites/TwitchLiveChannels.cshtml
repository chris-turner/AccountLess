<div class="row">
    <div class="col-lg-8 col-md-8 paddingBottom">
        <div class="btn-group ">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="twitchViewMode">
                Live Channels <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="@Url.Action("Twitch", "Sites", new { viewType = "Live" })" class="twitchViewOption">Live Channels</a></li>
                <li><a href="@Url.Action("Twitch", "Sites", new { viewType = "Channels" })" class="twitchViewOption">All Followed Channels</a></li>
            </ul>
        </div>
    </div>
</div>


@if (Model.twitchLiveChannels.Count > 0)
{
    for (int i = 0; i < Model.twitchLiveChannels.Count; i++)
    {
        <div class="row">
            <div class="col-md-9 paddingBottom">
                <div class="row">
                    <div class="col-lg-3">
                        <a href="http://twitch.tv/@Model.twitchLiveChannels[i].twitchChannelName" target="_blank"><img src="@Model.twitchLiveChannels[i].thumbnailURL" /></a>
                    </div>
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="boldText">@Model.twitchLiveChannels[i].twitchChannelName is playing @Model.twitchLiveChannels[i].game for @Model.twitchLiveChannels[i].viewerCount viewers.</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                @Model.twitchLiveChannels[i].streamTitle
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
        </div>

    }
}
@if (Model.twitchLiveChannels.Count == 0)
{
    <div class="row">
        <div class="col-md-9">
            No Live Channels :(
        </div>
    </div>
}
